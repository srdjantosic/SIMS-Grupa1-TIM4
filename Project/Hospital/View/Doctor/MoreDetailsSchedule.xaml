<Window x:Class="Project.Hospital.View.Doctor.MoreDetailsSchedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.Hospital.View.Doctor"
        mc:Ignorable="d"
        Title="MoreDetailsSchedule" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "Auto"/>
            <ColumnDefinition Width = "Auto"/>
        </Grid.ColumnDefinitions>
        <WrapPanel Grid.Column="0" Orientation="Vertical" Width="138">
            <Label FontSize="20" FontWeight="Normal" HorizontalAlignment="Stretch" Margin="20,18,0,0">Details</Label>
            <Button Height="40" Margin="0,30,0,0" Click="btnSchedule">SCHEDULE</Button>
            <Button Height="40" Click="btnMedicines">MEDICINES</Button>
            <Button Height="40" FontSize="9" Click="btnCreateRequestForFreeDays">CREATE REQUEST FOR FREE DAYS</Button>
            <Button Height="40" FontSize="9">SHOW REQUESTS FOR FREE DAYS</Button>
            <Button Height="40" FontSize="9">CREATE PERSONAL TERM</Button>
            <Button Height="40" FontSize="9">CREATE NONPERSONAL TERM</Button>
            <Button Height="40">HELP</Button>
            <Button Height="40" Click="btnLogOut">LOG OUT</Button>
        </WrapPanel>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "331"/>
                <ColumnDefinition Width = "331"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="225"/>
                <RowDefinition Height="225"/>
            </Grid.RowDefinitions>

            <GroupBox Grid.Column="0" Grid.Row="0" Header="Diagnosis" Width="300" Height="160" BorderBrush="Black">
                <TextBox Name="tbDiagnosis" ></TextBox>
            </GroupBox>

            <GroupBox Grid.Column="1" Grid.Row="0" Header="Comment"  Width="300" Height="160" BorderBrush="Black">
                <TextBox Name="tbComment" ></TextBox>
            </GroupBox>

            <GroupBox Grid.Column="0" Grid.Row="1" Header="Prescription"  Width="300" Height="160" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Height="20">Period in days:</TextBlock>
                    <TextBox Name="tbPeriodInDays" Grid.Column="1" Grid.Row="0" Width="50" Height="20"></TextBox>

                    <TextBlock Grid.Column="0" Grid.Row="1">Medicines:</TextBlock>
                    <TextBox Name="tbMedicines"  Grid.Column="1" Grid.Row="1"></TextBox>

                </Grid>
            </GroupBox>

            <Button Grid.Column="1" Grid.Row="1" Width="50" Height="20" Click="setMedicalChart" Margin="170,150,0,0" >Set</Button>
            <Button Grid.Column="1" Grid.Row="0" Width="50" Height="20" Margin="200,0,0,180" >Print</Button>
            
        </Grid>
    </Grid>
</Window>
