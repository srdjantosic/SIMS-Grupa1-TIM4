<Page x:Class="Project.Hospital.View.Doctor.CreatePersonalTerm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.Hospital.View.Doctor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="650"
      Title="CreatePersonalTerm">
    <Grid>
        <DataGrid x:Name="dgShowPatients" ItemsSource="{Binding patients}" IsReadOnly="True" SelectionMode="Extended"  AutoGenerateColumns="False"
                  HorizontalAlignment="Left" Height="158" Margin="100,100,0,0" VerticalAlignment="Top" BorderThickness="1,1,1,1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="First name" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Last name" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding _Gender}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="LBO" Binding="{Binding Lbo}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
