<Page x:Class="Project.Hospital.View.Doctor.ShowFreeDaysRequestsDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.Hospital.View.Doctor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="650"
      Title="ShowFreeDaysRequestsDetails">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" FontSize="22">Details</Label>

        <GroupBox Grid.Row="1" Header="Reason for free days request" Width="500" Height="180" BorderBrush="Black">
            <TextBox Name="tbReason" ></TextBox>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Declining reason" Width="500" Height="180" BorderBrush="Black">
            <TextBox Name="tbDecliningReason" ></TextBox>
        </GroupBox>
    </Grid>
</Page>
