<Page x:Class="Project.Hospital.View.Doctor.Notifications"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.Hospital.View.Doctor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="650"
      Title="Notifications">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" FontSize="20" FontWeight="Normal" HorizontalAlignment="Stretch" Margin="0,0,0,0">Notifications</Label>

        <Grid Grid.Row="1">
            <Grid Margin="20,20,0,0">
                <DataGrid x:Name="dataGridNotifications" HorizontalAlignment="Left"
                      VerticalAlignment="Top" Width="600" Height="280" Loaded="dataGridNotifications_Loaded">
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Page>
