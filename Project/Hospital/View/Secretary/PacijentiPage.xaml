<Page x:Class="Project.Hospital.View.Secretary.PacijentiPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.Hospital.View.Secretary"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="824"
      Title="PacijentiPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Height="180" Width="824">
            <Grid DockPanel.Dock="Left" Width="550">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="38" Padding="30,20">Pacijenti</TextBlock>
                <TextBox Grid.Row="1" Name="txtSearch" Height="25" Width="400" Margin="25,32,125,32" VerticalContentAlignment="Center" TextChanged="TextBox_TextChanged" PreviewKeyDown="txtSearch_PreviewKeyDown"></TextBox>
            </Grid>
            <Button DockPanel.Dock="Right" FontSize="18" Height="80" Margin="30" Click="kreiranjeNovogNaloga">Kreiranje novog naloga</Button>
        </DockPanel>
        <DataGrid Grid.Row="1" x:Name="dataGridPatients" HorizontalAlignment="Left"
                      VerticalAlignment="Top" Width="790" Height="500" Loaded="dataGridPatients_Loaded" MouseDoubleClick="dataGridPatients_MouseDoubleClick" Margin="10,0,0,0">

        </DataGrid>
    </Grid>
</Page>
