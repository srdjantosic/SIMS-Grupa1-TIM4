            </TabItem>
        </TabControl>
        <Button Width="100" FontSize="20" Click="vrati" Margin="-90,-125,0,510" HorizontalAlignment="Left" Grid.ColumnSpan="2">Početna</Button>

    </Grid>
</Window>
